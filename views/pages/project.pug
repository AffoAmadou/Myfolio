  .project 
    .project_wrapper 
      section.project__head
          figure.project__image
            img.project__image__media(alt=project.data.image.alt src=project.data.image.url)  
          .project__head__wrapper
            h1.project__title!=project.data.title 
      
      each section in project.data.body
        if section.slice_type=='description' 
          section.project__description 
            p.project__description__text=section.primary.text

        if section.slice_type=='content'
          section.project__content
            .project__content__wrapper 
              figure.project__content__image 
                img.project__content__image__media(alt=section.primary.content_image.alt src=section.primary.content_image.url)
              .project__content__content 
                h2.project__content__title=section.primary.title
                .project__content__text 
                  p.project__content__description=section.primary.description[0].text
                  p.project__content__description__sub=section.primary.text[0].text

        if section.slice_type=='process'
          section.project__process 
            .project__process_wrapper 
              h1.project__process__title!=section.primary.title
              .project__process__subtitle 
                p.project__process__role=section.primary.role
                p.project__process__type=section.primary.type
              .project__process__description 
                p.project__process__description__main 
                p.project__process__description__submain
              a.project__process__link(href=section.primary.link)=section.primary.link_text
        
        if section.slice_type=='design'
         each item in section.items
          each m in item
            section.project__design(data-color=`${section.primary.color}`)
              figure.project__design__image 
                 img.project__design__image__media(alt=m.alt src=m.url)
 
        if section.slice_type=='mobile'
            section.project__mobile(data-color=`${section.primary.color}`)
              each item in section.items
                 each p in item
                    figure.project__mobile__image 
                      img.project__mobile__image__media(alt=p.alt src=p.url)